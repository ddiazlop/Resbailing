#:import i18n i18n

<LoadingScreen>
    RelativeLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'ui/media/images/tobofondo2_estrellas.png'
    GridLayout:
        cols: 1
        size_hint: 1, 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        padding: 0, 0
        spacing: 0
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.5
            Rectangle:
                pos: self.pos
                size: self.size
        Image:
            source: 'ui/media/images/upload/loading.gif'
            size_hint: 1, 1
            pos_hint: {'center_x': .5, 'center_y': .5}
        Label:
            text: i18n.t('Loading...')
            font_size: 30
            color: 1, 1, 1, 1
            size_hint: 1, 1
            pos_hint: {'center_x': .5, 'center_y': .5}
        Label:
            id: info
            text: i18n.t('Please wait...')
            font_size: 20
            color: 1, 1, 1, 1
            size_hint: 1, 1
            pos_hint: {'center_x': .5, 'center_y': .5}