#:import _ src.i18n.Translator.t

<MainScreen>:
    FloatLayout:
        orientation: 'vertical'
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'ui/media/images/tobofondo1.png'

        Button:
            text: _('main.create_presentation')
            size_hint: 0.4, 0.2
            pos_hint: {'top': 0.8, 'right': 0.6}
            font_size: self.height * 0.2
            text_size: 0.6 * self.width, 1 * self.height
            valign: 'middle'
            halign: 'center'
            background_normal: 'ui/media/images/button1.png'
            background_down: 'ui/media/images/button1_pressed.png'
            ripple_scale: 0
            # Chamge the button text
            on_press: root.pressed_button(self)
            on_release: root.released_button(self)