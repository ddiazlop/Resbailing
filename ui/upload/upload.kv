<UploadScreen>
    RelativeLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: './images/tobofondo2_estrellas.png'
    Button:
        text: '[b]Selecciona un archivo PDF[/b]'
        font_size: self.height * 0.18
        markup: True
        size_hint: 0.6, 0.3
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        background_normal: './images/upload/boton_noback.png'
        background_down: './images/upload/boton_noback_pressed.png'
        on_release: root.show_load()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)