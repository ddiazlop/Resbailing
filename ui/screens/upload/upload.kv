#:import _ src.i18n.Translator.t

<UploadScreen>
    RelativeLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'ui/media/images/tobofondo2_estrellas.png'
    Button:
        id: upload
        text: '[b]' + _('upload.select_an_md') + '[/b]'
        font_size: self.height * 0.18
        markup: True
        size_hint: 0.6, 0.3
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        background_normal: 'ui/media/images/upload/boton_noback.png'
        background_down: 'ui/media/images/upload/boton_noback_pressed.png'
        on_release: root.popup_want_images()
    Button:
        id: upload
        text: '[b]'+_('upload.load_old_session')+'[/b]'
        font_size: self.height * 0.18
        markup: True
        size_hint: 0.6, 0.3
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        background_normal: 'ui/media/images/upload/boton_noback.png'
        background_down: 'ui/media/images/upload/boton_noback_pressed.png'
        on_release: root.show_select_session_popup()