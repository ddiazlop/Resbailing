#:import _ src.i18n.Translator.t
#:import config AppConfig.app_config

<SettingsScreen>
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        size_hint: 1, 1

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8, None

            BoxLayout:
                id: settings_box
                orientation: 'horizontal'
                size_hint_y: None
                height: '48dp'
                padding: '4dp'
                spacing: '4dp'
                pos_hint: {'top': 1}

                Label:
                    size_hint_x: 0.4
                    size_hint_y: None
                    height: '48dp'
                    text: _('settings.language')
                    valign: 'middle'
                    halign: 'left'
                    padding: '8dp', '12dp'

                Spinner:
                    id: language_spinner
                    size_hint_x: 0.4
                    size_hint_y: None
                    height: '48dp'
                    text: config.language
                    values: config.languages
                    on_text: config.language = self.text
                    valign: 'middle'
                    halign: 'center'
                    padding: '8dp', '12dp'


            Label:
                size_hint_y: None
                height: '48dp'
                text: _('settings.restart')
                valign: 'middle'
                halign: 'center'
                padding: '8dp', '100dp'
                color: 1, 0, 0, 1
                text_size: self.size


            FloatLayout:
                id: apply_box
                size_hint_y: None
                height: '48dp'

                Button:
                    text: _('settings.apply')
                    size_hint_x: None
                    width: '96dp'
                    on_release: root.apply_settings()
                    pos_hint: {'center_x':0.42, 'center_y':0.5}

                Button:
                    text: _('settings.cancel')
                    size_hint_x: None
                    width: '96dp'
                    on_release: root.cancel_settings()
                    pos_hint: {'center_x':0.58, 'center_y':0.5}